<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/eTopBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/foreground2"
        android:paddingTop="2dp"
        android:text="Share Your Experience"
        android:textAlignment="center"
        android:textColor="@color/foreground1"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/borders_list_item"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title:"
                    android:textColor="@color/foreground1"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/ebTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Shining"
                    android:textColor="@color/foreground1"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ebAuthor2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:enabled="false"
                    android:singleLine="true"
                    android:text="Author:"
                    android:textAlignment="center"
                    android:textColor="@color/foreground1"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/ebAuthor"
                    android:layout_width="312dp"
                    android:layout_height="69dp"
                    android:singleLine="true"
                    android:text="Stephen King"
                    android:textColor="@color/foreground1"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/eScore"
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:text="Rating: "
                    android:textAlignment="center"
                    android:textColor="@color/text"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/eRating"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="@color/text"
                    android:rating="2"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:stepSize="0.5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders_list_item"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eSectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Description (Spoiler free)"
                        android:textAlignment="center"
                        android:textColor="@color/foreground1"
                        android:textSize="20sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/eContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:selectAllOnFocus="true"
                    android:singleLine="false"
                    android:text="Text..."
                    android:textColor="@color/text"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders_list_item"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eSectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Experience (Spoilers)"
                        android:textAlignment="center"
                        android:textColor="@color/foreground1"
                        android:textSize="20sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/eContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:selectAllOnFocus="true"
                    android:singleLine="false"
                    android:text="Text..."
                    android:textColor="@color/text"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ePros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders_list_item"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eSectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Pros (Spoiler free)"
                        android:textAlignment="center"
                        android:textColor="@color/foreground1"
                        android:textSize="20sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/eContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:selectAllOnFocus="true"
                    android:singleLine="false"
                    android:text="Text..."
                    android:textColor="@color/text"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eCons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders_list_item"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eSectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Cons (Spoiler free)"
                        android:textAlignment="center"
                        android:textColor="@color/foreground1"
                        android:textSize="20sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/eContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:selectAllOnFocus="true"
                    android:singleLine="false"
                    android:text="Text..."
                    android:textColor="@color/text"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/eDelete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borders_list_item"
            android:paddingTop="2dp"
            android:text="Delete Story"
            android:textAlignment="center"
            android:textColor="@color/foreground1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eFinish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borders_list_item"
            android:paddingTop="2dp"
            android:text="Update Story"
            android:textAlignment="center"
            android:textColor="@color/foreground1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eBack"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borders_list_item"
            android:paddingTop="2dp"
            android:text="Back"
            android:textAlignment="center"
            android:textColor="@color/foreground1"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>